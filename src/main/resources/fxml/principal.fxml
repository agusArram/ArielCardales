<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="SORT_PROYECTS.AppInventario.controller.AppController"
            stylesheets="@../Estilos/Estilos.css">

    <!--  BARRA SUPERIOR -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #b88a52; -fx-padding: 15;">
            <!-- BOTÓN INICIO -->
            <Button text="🏠 Inicio"
                    onAction="#volverInicio"
                    style="-fx-background-color: #e6c89b; -fx-text-fill: #2b2b2b; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20; -fx-background-radius: 5;"/>

            <Separator orientation="VERTICAL" style="-fx-padding: 0 10;"/>

            <Button text="Inventario"
                    onAction="#restaurarInventarioCompleto"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-cursor: hand;"/>


            <Region HBox.hgrow="ALWAYS"/>
            <Button text="📊 Reportes" onAction="#mostrarMetricas"
                    style="-fx-background-color: #e6c89b; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Button text="📦 Productos" onAction="#verInventarioTreeExperimental"
                    style="-fx-background-color: #e6c89b; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Button text="💰 Ventas" onAction="#mostrarVentas"
                    style="-fx-background-color: #e6c89b; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Button text="👥 Clientes" onAction="#mostrarClientes"
                    style="-fx-background-color: #e6c89b; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>

            <MenuBar>
                <!-- Menú de Ayuda -->
                <Menu text="Ayuda">
                    <MenuItem text="Buscar actualizaciones" onAction="#onBuscarActualizaciones">
                        <graphic>
                            <Label text="🔄" />
                        </graphic>
                    </MenuItem>

                    <MenuItem text="Sincronizar Backup Local" onAction="#onSincronizarBackup">
                        <graphic>
                            <Label text="💾" />
                        </graphic>
                    </MenuItem>

                    <SeparatorMenuItem />

                    <MenuItem text="Acerca de" onAction="#onAcercaDe">
                        <graphic>
                            <Label text="ℹ️" />
                        </graphic>
                    </MenuItem>

                    <MenuItem text="Reportar problema" onAction="#onReportarProblema">
                        <graphic>
                            <Label text="🐛" />
                        </graphic>
                    </MenuItem>

                    <SeparatorMenuItem />

                    <MenuItem text="Cerrar sesión" onAction="#onCerrarSesion">
                        <graphic>
                            <Label text="🚪" />
                        </graphic>
                    </MenuItem>
                </Menu>

                <!-- Menú de Administración (separado, solo para plan DEV) -->
                <Menu fx:id="menuAdministracion" text="Administración" visible="false">
                    <MenuItem text="Registrar nuevo usuario" onAction="#mostrarRegistroUsuario">
                        <graphic>
                            <Label text="👤➕" />
                        </graphic>
                    </MenuItem>
                </Menu>
            </MenuBar>
        </HBox>
    </top>



    <!--  CONTENIDO CENTRAL (cambia dinámicamente) -->
    <center>
        <VBox fx:id="contenedorPrincipal" alignment="CENTER">
            <Label text="Seleccioná una sección para comenzar"
                   style="-fx-font-size: 16px; -fx-text-fill: #2b2b2b;"/>
        </VBox>
    </center>

</BorderPane>

