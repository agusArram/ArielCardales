<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="SORT_PROYECTS.AppInventario.controller.ClientesController"
      spacing="0"
      style="-fx-background-color: #E8DCC4;"
      VBox.vgrow="ALWAYS">

    <!-- ENCABEZADO -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20 20 15 20;">
        <Label text="👥 Gestión de Clientes" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5D4E37;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="💡 Expandir cliente para ver historial de compras | Doble clic en cliente para editar"
               style="-fx-text-fill: #8B7355; -fx-font-size: 11px; -fx-font-style: italic;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnNuevoCliente"
                text="+ Nuevo Cliente"
                onAction="#abrirNuevoCliente"
                style="-fx-background-color: #D4A574; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;">
            <font>
                <Font size="13.0"/>
            </font>
        </Button>

        <Button fx:id="btnEliminarCliente"
                text="🗑 Eliminar"
                onAction="#eliminarClienteSeleccionado"
                style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;">
            <font>
                <Font size="13.0"/>
            </font>
        </Button>
    </HBox>

    <!-- FILTROS AVANZADOS -->
    <VBox spacing="12" style="-fx-background-color: #D4A574; -fx-padding: 15; -fx-background-radius: 8;">
        <VBox.margin>
            <Insets left="20" right="20" bottom="15"/>
        </VBox.margin>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="🔍 Búsqueda Avanzada" style="-fx-font-weight: bold; -fx-text-fill: #5D4E37; -fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnLimpiar"
                    text="🔄 Limpiar filtros"
                    onAction="#limpiarFiltros"
                    style="-fx-background-color: white; -fx-text-fill: #5D4E37; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </HBox>

        <GridPane hgap="15" vgap="10">
            <!-- Fila 1 -->
            <Label text="Nombre:" style="-fx-text-fill: #5D4E37; -fx-font-weight: bold;"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtFiltroNombre"
                       promptText="Buscar por nombre..."
                       prefWidth="250"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="DNI:" style="-fx-text-fill: #5D4E37; -fx-font-weight: bold;"
                   GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtFiltroDni"
                       promptText="Buscar por DNI..."
                       prefWidth="180"
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <!-- Fila 2 -->
            <Label text="Teléfono:" style="-fx-text-fill: #5D4E37; -fx-font-weight: bold;"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtFiltroTelefono"
                       promptText="Buscar por teléfono..."
                       prefWidth="250"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Email:" style="-fx-text-fill: #5D4E37; -fx-font-weight: bold;"
                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="txtFiltroEmail"
                       promptText="Buscar por email..."
                       prefWidth="250"
                       GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        </GridPane>

        <!-- Info de búsqueda activa -->
        <Label fx:id="lblInfoFiltros"
               text="💡 Puedes usar varios filtros simultáneamente. La búsqueda es en tiempo real."
               style="-fx-text-fill: #5D4E37; -fx-font-size: 11px; -fx-font-style: italic; -fx-padding: 5 0 0 0;"/>
    </VBox>

    <!-- TABLA DE CLIENTES -->
    <StackPane VBox.vgrow="ALWAYS" style="-fx-padding: 0 20 20 20;">
        <!-- Indicador de carga -->
        <VBox fx:id="vboxLoading"
              alignment="CENTER"
              visible="false"
              managed="false"
              style="-fx-background-color: rgba(232, 220, 196, 0.95);">
            <ProgressIndicator fx:id="progressIndicator"/>
            <Label text="Cargando clientes..." style="-fx-font-size: 14px; -fx-text-fill: #5D4E37;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Label>
        </VBox>

        <!-- Tabla principal (TreeTableView) -->
        <VBox spacing="10">
            <TreeTableView fx:id="tablaClientes"
                           VBox.vgrow="ALWAYS"
                           showRoot="false"
                           style="-fx-background-color: white; -fx-background-radius: 8;">
                <placeholder>
                    <Label text="No hay clientes registrados" style="-fx-text-fill: #888; -fx-font-size: 14px;"/>
                </placeholder>
            </TreeTableView>

            <!-- Estadísticas al pie -->
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #D4A574; -fx-background-radius: 5;">
                <Label text="Total de clientes:" style="-fx-font-weight: bold; -fx-text-fill: #5D4E37;"/>
                <Label fx:id="lblTotalClientes" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5D4E37;"/>
            </HBox>
        </VBox>
    </StackPane>
</VBox>
