<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.arielcardales.arielcardales.controller.AgregarVarianteController"
      spacing="14" alignment="CENTER"
      stylesheets="@../Estilos/Estilos.css"
      prefWidth="360" prefHeight="360"
      styleClass="form-cuero">

    <Label text="Agregar Variante"
           style="-fx-font-size: 17px; -fx-font-weight: bold;"
           alignment="CENTER"/>

    <GridPane hgap="12" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="90"/>
            <ColumnConstraints halignment="LEFT" prefWidth="200" maxWidth="200"/>
        </columnConstraints>


        <Label text="Color:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtColor" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Talle:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTalle" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Costo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCosto" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Stock:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStock" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="30" alignment="CENTER">
        <Button text="Cerrar" onAction="#cerrar"/>
        <Button text="Agregar" onAction="#guardarVariante"/>
    </HBox>
</VBox>
